<h2>{{name}}</h2>
<div class='hidden'>
  {{modelName}}
</div>
<hr>
<a href='{{areas.[0].options.add}}'><button class='btn btn-success'>Adicionar conteúdo</button></a>

{{#each content}}
<div class='card mt-4'>
  <div class='card-body'>
    <h4>{{titleContent}}</h4>
    <small>Descrição: {{descriptionContent}}</small><br>
    <small>Data de criação: {{data}}</small><br>
    <table>
      <tr>
        <td>
          <a href='/manager/editar-conteudo/{{../modelName}}/{{_id}}' class='btn btn-success mt-2'>Editar</a>
        </td>
        <td>
          <form action='/manager/forms-main/forms-area/options/forms-delete/{{../modelName}}/{{_id}}' method='POST'>
            <button class='btn btn-outline-danger mx-2 mt-2' type='submit'>Deletar</button>
          </form>
        </td>
      </tr>
    </table>
  </div>
</div>
{{/each}}

{{#unless content}}
<hr>
<h4 class='mt-2'>Não há conteúdo registrado</h4>
{{/unless}}